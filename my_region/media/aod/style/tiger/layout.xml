<?xml version='1.0' encoding='utf-8' standalone='yes' ?>
<GroupLayout
    gravity="center"
    groupLayout="vertical"
    height="match_parent"
    width="match_parent">

    <MultiImageView
        width="wrap_content"
        height="wrap_content"
        supportCustomize="true"
        backgroundName="aod_internal_style_aod_pic_indonesia" 
        backgroundType="pic"/>
    <GroupLayout
        gravity="center"
        groupLayout="vertical"
        isRootGradient="true"
        height="wrap_content"
        width="wrap_content"
        marginStart="0"
        marginTop="0">
        <GroupLayout
            groupLayout="vertical"
            isRootGradient="true"
            height="wrap_content"
            width="wrap_content"
            gravity="center"
            marginStart="0"
            marginTop="0">
            <TimeView
                direction="horizontal"
                width="wrap_content"
                height="wrap_content"
                textStroke="false"
                textSize="54"
                textWidget="330"
                typefacePath="normal"
                linearGradientStart="lt"
                linearGradientEnd="rb"
                supportVisiableTime="true"
                supportGradientColors="true"
                supportTextThickness="true"
                linearGradientColors="#FFFFFF|#FFFFFF"
                visibility="visiable"
                zoomX="1.0"
                zoomY="1.0"/>
            <DateView
                alignment="center"
                direction="horizontal"
                width="wrap_content"
                height="wrap_content"
                marginTop="5"
                textSize="14"
                typefacePath="normal"
                linearGradientStart="lt"
                linearGradientEnd="rb"
                supportVisiableDate="true"
                supportGradientColors="true"
                supportTextThickness="true"
                linearGradientColors="#FFE1DA|#FF3200"
                visibility="visiable"
                zoomX="1.0"
                zoomY="1.0"/>

            <LunarView
                alignment="center"
                direction="horizontal"
                width="wrap_content"
                height="wrap_content"
                textSize="14"
                marginTop="2"
                typefacePath="normal"
                linearGradientStart="lt"
                linearGradientEnd="rb"
                supportVisiableLunar="true"
                supportGradientColors="true"
                supportTextThickness="true"
                linearGradientColors="#FFE1DA|#FF3200"
                visibility="visiable"
                zoomX="1.0"
                zoomY="1.0"/>

            <AodMediaView
                alignment="center"
                direction="horizontal"
                width="wrap_content"
                height="wrap_content"
                maxWidth="200"
                marginTop="2"
                textSize="14"
                linearGradientStart="lt"
                linearGradientEnd="rb"
                supportVisiableMedia="true"
                supportGradientColors="true"
                linearGradientColors="#FFE1DA|#FF3200"
                visibility="visiable"
                zoomX="1.0"
                zoomY="1.0"/>

            <BatteryView
                marginTop="2"
                width="wrap_content"
                height="wrap_content"
                textSize="14"
                showPercent="true"
                typefacePath="normal"
                direction="horizontal"
                linearGradientStart="lt"
                linearGradientEnd="rb"
                supportGradientColors="true"
                supportVisiableBattery="true"
                supportTextThickness="true"
                linearGradientColors="#FFE1DA|#FF3200"
                visibility="visiable"
                zoomX="1.0"
                zoomY="1.0"/>
        </GroupLayout>
        <GroupLayout
            height="wrap_content"
            width="wrap_content"
            groupLayout="horizontal"
            gravity="center"
            marginStart="0"
            marginTop="20">
            <NotificationView
                width="wrap_content"
                height="wrap_content"
                linearGradientStart="lt"
                linearGradientEnd="rb"
                supportVisiableNotification="true"
                supportGradientColors="true"
                supportDirection="true"
                linearGradientColors="#FFE1DA|#FF3200"
                visibility="visiable"
                zoomX="1.0"
                zoomY="1.0"/>
        </GroupLayout>
    </GroupLayout>
</GroupLayout>